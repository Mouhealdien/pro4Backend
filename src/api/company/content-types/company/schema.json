{
  "kind": "collectionType",
  "collectionName": "companies",
  "info": {
    "singularName": "company",
    "pluralName": "companies",
    "displayName": "company",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "address": {
      "type": "string"
    },
    "companySize": {
      "type": "enumeration",
      "enum": [
        "from 1  to 5",
        "from 6  to 10",
        "from 11 to 25",
        "from 20 to 100",
        "more than 100"
      ]
    },
    "jobRoles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::job-role.job-role",
      "inversedBy": "companies"
    },
    "foundedDate": {
      "type": "date"
    },
    "phone": {
      "type": "string",
      "unique": true,
      "required": false
    },
    "officePhone": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "instagram": {
      "type": "string"
    },
    "telegram": {
      "type": "string"
    },
    "facebook": {
      "type": "string"
    },
    "twitter": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "profileImg": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "coverImg": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "company"
    },
    "jobs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::job.job",
      "mappedBy": "company"
    },
    "cities": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::city.city",
      "inversedBy": "companies"
    },
    "bio": {
      "type": "text",
      "required": true
    }
  }
}
